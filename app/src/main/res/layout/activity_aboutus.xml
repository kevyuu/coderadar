<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/action_about_us"
        android:gravity="center_vertical"
        android:textSize="@dimen/abc_text_size_menu_material"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_marginLeft="16dp"
        android:paddingTop="8dp"
        android:text="This is a contest reminder app for android. With this app, you can view all upcoming
                     contests from various online judges all in one place. You will never miss any
                     contest anymore because this app will remind you."
        android:layout_height="wrap_content"/>

</LinearLayout>